# ===========================================
# .env.example - Template for all environments
# Copy to .env.development, .env.staging, or .env.production
# ===========================================

# Application
ENVIRONMENT=development
APP_NAME="Healthcare RCM System"
APP_VERSION=1.0.0
DEBUG=false

# Security (REQUIRED - Generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# HCX Platform (REQUIRED)
# Environment: staging or production
HCX_ENVIRONMENT=staging
HCX_PARTICIPANT_CODE=hospital-001@swasth
HCX_USERNAME=hospital_user
HCX_PASSWORD=secure_password

# Encryption Keys (PEM format, base64 encoded)
# Generate with: openssl genrsa -out private.pem 2048
#                openssl rsa -in private.pem -pubout -out public.pem
#                base64 private.pem
HCX_ENCRYPTION_PRIVATE_KEY=LS0tLS1CRUdJTi...
HCX_ENCRYPTION_PUBLIC_KEY=LS0tLS1CRUdJTi...

# Optional HCX Settings
HCX_API_KEY=your_api_key_if_needed
HCX_REQUEST_TIMEOUT=30
HCX_MAX_RETRIES=3
HCX_RETRY_DELAY=2
HCX_RATE_LIMIT_PER_MINUTE=60
HCX_WEBHOOK_URL=https://your-domain.com/api/v1/hcx/webhook

# Database (REQUIRED)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=healthcare_rcm
DB_USER=rcm_user
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# Kafka (Optional)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLAIMS_TOPIC=rcm.claims
KAFKA_ENABLE=false

# OpenAI/LLM (REQUIRED)
OPENAI_API_KEY=CHANGE_ME_YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2000

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0
RETRY_MAX_WAIT=10

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# CORS
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true

# Feature Flags
ENABLE_ELIGIBILITY_CHECK=true
ENABLE_PREAUTH=true
ENABLE_CLAIM_SUBMISSION=true
ENABLE_ANALYTICS=true

